extends: default

rules:
  line-length:
    max: 160
    level: warning
  truthy:
    allowed-values: ['true', 'false', 'on', 'off', 'yes', 'no']
  document-start:
    present: true
  indentation:
    indent-sequences: consistent
  comments-indentation: disable

ignore: |
  collections/**
  uv.lock
  .venv/**
